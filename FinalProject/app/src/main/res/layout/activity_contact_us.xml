<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF0000"
    android:orientation="vertical">

    <EditText
        android:layout_width="355sp"
        android:layout_height="30sp"
        android:background="@android:color/white"
        android:layout_marginTop="9dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/et_contact_name"
        android:layout_alignStart="@+id/et_contact_name"
        android:id="@+id/et_contact_email"
        android:hint="Email"
        android:textColor="@android:color/black" />

    <Button
        android:text="SEND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:id="@+id/bt_send_btn"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/primaryColorDark" />

    <EditText
        android:layout_width="355sp"
        android:layout_height="100sp"
        android:background="@android:color/white"
        android:layout_marginTop="9dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/et_contact_content"
        android:hint="Type your message here.."
        android:layout_below="@+id/et_contact_email"
        android:layout_alignEnd="@+id/et_contact_email"
        android:textColor="@android:color/black"
        android:singleLine="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/applogomain"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/imageView7" />

    <EditText
        android:layout_width="355sp"
        android:layout_height="30sp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="100dp"
        android:id="@+id/et_contact_name"
        android:background="@android:color/white"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        android:textColor="@android:color/black"
        tools:background="@android:color/background_light" />

    <TextView
        android:text="Contact Us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:textSize="36sp"
        android:textColor="@android:color/white" />


</RelativeLayout>