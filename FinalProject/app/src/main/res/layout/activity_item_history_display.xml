<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yugenshtil.finalproject.model.ItemDisplayActivity"
    android:background="@color/cardview_light_background">


    <TextView
        android:id="@+id/tvItemBuy_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="92dp"
        android:layout_marginRight="48dp"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:text="Sois comme l'eau mon ami"
        android:width="0dip"
        android:textColor="@android:color/black"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/tvItemBuy_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvItemBuy_Title"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="92dp"
        android:layout_marginRight="48dp"
        android:ellipsize="start"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:text="Desc"
        android:textColor="#7E7E7E"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tvItemBuy_Price"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvItemBuy_Description"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="92dp"
        android:layout_marginRight="48dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:text="Price"
        android:textColor="#7E7E7E"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imImage_itemDisplay"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:src="@drawable/noimageavailable"
        android:layout_marginBottom="334dp"
        android:layout_above="@+id/im_update_icon"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imDelete_itemDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_black_36dp"
        android:paddingRight="6dp"
        android:layout_below="@+id/tvItemBuy_Price"
        android:layout_alignEnd="@+id/tvItemBuy_Price" />

</RelativeLayout>


